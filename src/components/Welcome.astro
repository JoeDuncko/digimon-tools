---
import digimonToolsLogo from '../assets/digimonToolsLogo.png';
---

<div id="container">
    <main>
        <section id="hero">
            <img src={digimonToolsLogo.src} alt="Digimon Tools logo" />
            <h1>Digimon Tools</h1>
            <p>A collection of tools for the 2020 Digimon TCG.</p>

            <section>
                <ul>
                    <li><a href="/playmat">Printable Playmat</a></li>
                </ul>
            </section>
        </section>
    </main>
</div>

<style>
    #container {
        font-family: 'Arial', sans-serif;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
    }

    #hero {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    #hero img {
        width: 100px;
        height: 100px;
    }

    #hero h1 {
        font-size: 2rem;
        font-weight: 600;
        margin-top: 1rem;
    }

    #hero p {
        font-size: 1.2rem;
        margin-top: 0.5rem;
    }

    #hero section {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    #hero section ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    #hero section ul li {
        margin-bottom: 0.5rem;
    }

    #hero section ul li a {
        color: #000;
    }
</style>
