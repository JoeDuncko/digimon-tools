---
import BreedingArea from './BreedingArea.astro';
import CardArea from './CardArea.astro';
import MemoryGauge from './MemoryGauge.astro';
import SecurityStack from './SecurityStack.astro';
---

<div class="digimon-playmat">
    <div class="playmat-container">
        <MemoryGauge />

        <div class="playmat-flex">
            <div class="battle-area-label">Battle Area</div>

            <div class="left-column">
                <SecurityStack />

                <BreedingArea />
            </div>

            <div class="right-column">
                <CardArea label="Deck" labelPosition="left" />
                <CardArea label="Trash" labelPosition="left" />
            </div>
        </div>
    </div>
</div>

<style>
    .digimon-playmat {
        font-family: 'Arial', sans-serif;
        width: 100%;
        height: 100vh;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        overflow: hidden;
    }

    .playmat-container {
        margin: 1rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .playmat-flex {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        gap: 1rem;
        position: relative;
    }

    .battle-area-label {
        position: absolute;
        top: 20%;
        left: 50%;
        color: #666;
    }

    .left-column {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        gap: 1rem;
    }

    .right-column {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        position: relative;
        right: -1.25in;
    }
</style>
