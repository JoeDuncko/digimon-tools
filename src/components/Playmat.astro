<div class="digimon-playmat">
    <div class="memory-gauge">
        <div class="memory-gauge-line">
            <div class="memory-gauge-number player">10</div>
            <div class="memory-gauge-number player">9</div>
            <div class="memory-gauge-number player">8</div>
            <div class="memory-gauge-number player">7</div>
            <div class="memory-gauge-number player">6</div>
            <div class="memory-gauge-number player">5</div>
            <div class="memory-gauge-number player">4</div>
            <div class="memory-gauge-number player">3</div>
            <div class="memory-gauge-number player">2</div>
            <div class="memory-gauge-number player">1</div>
            <div class="memory-gauge-number">0</div>
            <div class="memory-gauge-number opponent">1</div>
            <div class="memory-gauge-number opponent">2</div>
            <div class="memory-gauge-number opponent">3</div>
            <div class="memory-gauge-number opponent">4</div>
            <div class="memory-gauge-number opponent">5</div>
            <div class="memory-gauge-number opponent">6</div>
            <div class="memory-gauge-number opponent">7</div>
            <div class="memory-gauge-number opponent">8</div>
            <div class="memory-gauge-number opponent">9</div>
            <div class="memory-gauge-number opponent">10</div>
        </div>
    </div>

    <div class="playmat-grid">
        <div class="deck-zone">Deck</div>
        <div class="trash-zone">Trash</div>
        <div class="hand-zone">Hand</div>
        <div class="battle-zone">Battle Area</div>
        <div class="security-zone">Security</div>
        <div class="egg-zone">Egg Deck</div>
        <div class="memory-gauge">Memory Gauge</div>
    </div>
</div>

<style>
    .digimon-playmat {
        font-family: 'Arial', sans-serif;
    }

    .memory-gauge-line {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        gap: 1rem;
    }

    .memory-gauge-number {
        font-size: 1.5rem;
        font-weight: bold;
        border: 1px solid black;
        padding: 0.5rem;
        border-radius: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .memory-gauge-number.player {
        background-color: white;
        color: black;
    }

    .memory-gauge-number.opponent {
        background-color: black;
        color: white;
        transform: rotate(180deg);
    }
</style>
