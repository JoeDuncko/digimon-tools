---
import BreedingArea from './BreedingArea.astro';
import MemoryGauge from './MemoryGauge.astro';
---

<div class="digimon-playmat">
    <div style={{ margin: '1rem', display: 'flex', flexDirection: 'column', gap: '1rem' }}>
        <MemoryGauge />

        <div class="playmat-grid">
            <div class="left-column">
                <div class="security-stack">
                    <div class="space-label">Security Stack</div>
                </div>

                <BreedingArea />
            </div>

            <div class="right-column">
                <div class="deck-zone">
                    <div class="space-label">Deck</div>
                </div>
                <div class="trash-zone">
                    <div class="space-label">Trash</div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .digimon-playmat {
        font-family: 'Arial', sans-serif;
        width: 100%;
        height: 100vh;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .playmat-grid {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        gap: 1rem;
    }

    .left-column {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        gap: 1rem;
    }

    .right-column {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .security-stack {
        border: 1px solid black;
        width: 3.5in;
        height: 2.5in;
        border-radius: 0.5rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .deck-zone {
        border: 1px solid black;
        width: 2.5in;
        height: 3.5in;
        border-radius: 0.5rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 2.5in;
        height: 3.5in;
    }

    .trash-zone {
        border: 1px solid black;
        width: 2.5in;
        height: 3.5in;
        border-radius: 0.5rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 2.5in;
        height: 3.5in;
    }

    .space-label {
        font-size: 0.9rem;
        color: #666;
    }
</style>
