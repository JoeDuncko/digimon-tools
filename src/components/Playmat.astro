<div class="digimon-playmat">
    <div class="playmat-grid">
        <div class="deck-zone">Deck</div>
        <div class="trash-zone">Trash</div>
        <div class="hand-zone">Hand</div>
        <div class="battle-zone">Battle Area</div>
        <div class="security-zone">Security</div>
        <div class="egg-zone">Egg Deck</div>
        <div class="memory-gauge">Memory Gauge</div>
    </div>
</div>

<style>
    .digimon-playmat {
        background-color: #f0f0f0;
        border: 2px solid #333;
        border-radius: 8px;
        padding: 2rem;
        aspect-ratio: 16/9;
        margin: 0 auto;
        max-width: 100%;
    }

    .playmat-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-template-rows: repeat(3, 1fr);
        gap: 1rem;
        height: 100%;
    }

    .deck-zone,
    .trash-zone,
    .hand-zone,
    .battle-zone,
    .security-zone,
    .egg-zone,
    .memory-gauge {
        background-color: white;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        text-align: center;
    }

    .deck-zone {
        grid-column: 1;
        grid-row: 1;
    }

    .trash-zone {
        grid-column: 2;
        grid-row: 1;
    }

    .hand-zone {
        grid-column: 3;
        grid-row: 1;
    }

    .battle-zone {
        grid-column: 1 / span 3;
        grid-row: 2;
    }

    .security-zone {
        grid-column: 1;
        grid-row: 3;
    }

    .egg-zone {
        grid-column: 2;
        grid-row: 3;
    }

    .memory-gauge {
        grid-column: 3;
        grid-row: 3;
    }
</style>