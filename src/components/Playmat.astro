---
import MemoryGauge from './MemoryGauge.astro';
---

<div class="digimon-playmat">
    <MemoryGauge />

    <div class="playmat-grid">
        <div class="left-column">
            <div class="security-stack">Security Stack</div>
            <div class="breeding-area">Breeding Area</div>
        </div>

        <div class="right-column">
            <div class="deck-zone">Deck</div>
            <div class="trash-zone">Trash</div>
            <div class="game-flow">Game Flow</div>
        </div>
    </div>
</div>

<style>
    .digimon-playmat {
        font-family: 'Arial', sans-serif;
        width: 100%;
        height: 100vh;
    }

    .playmat-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: 1fr 1fr;
        gap: 1rem;
    }

    .playmat-grid > div {
        border: 1px solid black;
        padding: 1rem;
        border-radius: 1rem;
    }
</style>
